{
  "permissions": {
    "allow": [
      "Bash(source:*)",
      "Bash(python -m pytest tests/ -v)",
      "Bash(python -m pytest tests/test_models.py::TestMarkingScheme::test_marking_scheme_to_dict -v -s)",
      "Bash(python -m pytest tests/ -v --tb=short)",
      "Bash(python -m pytest tests/test_models.py::TestGradingJob::test_job_status_updates -v -s)",
      "Bash(python -m pytest tests/test_models.py::TestGradingJob::test_job_status_updates -v)",
      "Bash(python -m pytest tests/test_models.py::TestGradingJob::test_job_retry_functionality -v -s)",
      "Bash(python -m pytest tests/test_models.py::TestGradingJob::test_job_retry_functionality -v)",
      "Bash(python -m pytest tests/test_models.py::TestSubmission::test_submission_retry_logic -v -s)",
      "Bash(python -m pytest tests/test_models.py::TestSubmission::test_submission_retry_logic -v)",
      "Bash(python -m pytest tests/test_models.py::TestJobBatch::test_batch_progress_calculation -v -s)",
      "Bash(python -m pytest tests/test_models.py::TestJobBatch::test_batch_progress_calculation -v)",
      "Bash(python -m pytest tests/test_tasks.py::TestModuleImportIssues::test_celery_worker_import_simulation -v)",
      "Bash(python:*)",
      "Bash(sed:*)",
      "Bash(.specify/scripts/bash/create-new-feature.sh:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$ARGUMENTS\" | grep -q 'git commit'; then echo 'ðŸ” Running pre-commit checks...'; ./run_linting.sh && python -m pytest tests/ -v --tb=short || { echo 'âŒ Pre-commit checks failed. Commit blocked.'; exit 1; }; fi",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then python -m black \"$FILE_PATH\" --quiet 2>/dev/null; python -m isort \"$FILE_PATH\" --quiet 2>/dev/null; fi",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
