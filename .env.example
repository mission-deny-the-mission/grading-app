# Document Grading Application Configuration
# Copy this file to .env and fill in your values
# ⚠️ DO NOT COMMIT .env FILE TO VERSION CONTROL

# ============================================================================
# SECURITY: Database Encryption Key (REQUIRED)
# ============================================================================
# Generate a new key with:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#
# ⚠️ CRITICAL: This key encrypts all API keys at rest in the database.
#    - Keep this key secure and never commit to version control
#    - Use the same key across application restarts
#    - Losing the key makes stored API keys unrecoverable
#    - For production, store in a secrets manager (not in .env)
DB_ENCRYPTION_KEY=

# ============================================================================
# Flask Configuration
# ============================================================================
# Secret key for Flask sessions (generate random string for production)
SECRET_KEY=change-me-in-production

# Application environment (development, testing, production)
FLASK_ENV=development

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (default for development):
DATABASE_URL=sqlite:///grading_app.db

# PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost/grading_app

# ============================================================================
# API Provider Configuration
# ============================================================================

# OpenRouter API Key
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Claude API Key (Anthropic)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key
# Get from: https://ai.google.dev/
GEMINI_API_KEY=

# Z.AI API Key
# Get from: https://z.ai/ (if using Z.AI provider)
ZAI_API_KEY=

# NanoGPT API Key (if applicable)
NANOGPT_API_KEY=

# Chutes API Key (if applicable)
CHUTES_API_KEY=

# ============================================================================
# Local AI Provider Configuration
# ============================================================================

# LM Studio Configuration
# Default: http://localhost:1234/v1
LM_STUDIO_URL=http://localhost:1234/v1

# Ollama Configuration
# Default: http://localhost:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2  # Model name to use with Ollama

# ============================================================================
# Redis Configuration (for background tasks)
# ============================================================================
# Default: localhost:6379
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Application Settings
# ============================================================================

# Maximum document upload size (in MB)
MAX_UPLOAD_SIZE_MB=50

# Allowed document types (comma-separated)
ALLOWED_DOCUMENT_TYPES=pdf,txt,docx,doc,odt

# Default grading model
DEFAULT_GRADING_MODEL=openrouter

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=

# ============================================================================
# Security Settings
# ============================================================================

# Enable HTTPS enforcement (set to true in production)
ENFORCE_HTTPS=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# ============================================================================
# Development Settings (DO NOT USE IN PRODUCTION)
# ============================================================================

# Debug mode (set to false in production)
DEBUG=true

# Test mode flag
TESTING=false

# Reset database on startup (DANGEROUS - only for development)
# RESET_DB=false
