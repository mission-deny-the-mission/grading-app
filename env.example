# Grading App Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///grading_app.db
# For PostgreSQL (example)
# DATABASE_URL=postgresql://username:password@localhost:5432/grading_app
# For MySQL (example)
# DATABASE_URL=mysql://username:password@localhost:3306/grading_app

# Database Encryption Key for API Key Storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Store securely in .env, DO NOT commit to version control
# If missing, API keys will be stored unencrypted (security risk)
DB_ENCRYPTION_KEY=your-encryption-key-here

# API Keys for LLM Providers
# Get your OpenRouter API key from: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-your-key-here

# Get your Claude API key from: https://console.anthropic.com
CLAUDE_API_KEY=sk-ant-your-key-here

# Get your Google Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key-here

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Get your Chutes AI API key from: https://chutes.ai
CHUTES_API_KEY=your-chutes-key-here

# Get your Z.AI API key from: https://docs.z.ai
Z_AI_API_KEY=your-z-ai-key-here

# Get your Z.AI Coding Plan API key from: https://docs.z.ai (requires active subscription)
Z_AI_CODING_PLAN_API_KEY=your-z-ai-coding-plan-key-here

# Get your NanoGPT API key from: https://nano-gpt.com
NANOGPT_API_KEY=your-nanogpt-key-here

# LM Studio local server URL (default)
LM_STUDIO_URL=http://localhost:1234/v1

# Ollama local server URL (default)
OLLAMA_URL=http://localhost:11434/api/generate

# Azure Computer Vision API (for OCR)
# Get your Azure Vision key from: https://portal.azure.com
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key-here

# Image Quality Assessment Thresholds
BLUR_THRESHOLD=100.0
MIN_IMAGE_WIDTH=800
MIN_IMAGE_HEIGHT=600

# Redis Configuration (for Celery broker and result backend)
# Default Redis connection (used by Celery)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
# Maximum file size in bytes (50MB for image uploads)
MAX_CONTENT_LENGTH=52428800

# Upload folder path (absolute path for Docker)
UPLOAD_FOLDER=/app/uploads

# Development/Production Settings
# Set to 'production' for production deployment
ENVIRONMENT=development

# Optional: Custom Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Optional: Celery Configuration overrides
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=grading_app.log

# Optional: Security Settings
# Set to True in production to use HTTPS
# USE_HTTPS=false

# Optional: Session Configuration
# SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# Optional: Rate Limiting
# RATELIMIT_STORAGE_URL=redis://localhost:6379/0
# RATELIMIT_DEFAULT=100 per minute

# Optional: Monitoring and Health Checks
# HEALTH_CHECK_ENABLED=true
# MONITORING_ENABLED=false

# Optional: Backup Configuration
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *  # Cron format: daily at 2 AM
# BACKUP_RETENTION_DAYS=7
