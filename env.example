# Grading App Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///grading_app.db
# For PostgreSQL (example)
# DATABASE_URL=postgresql://username:password@localhost:5432/grading_app
# For MySQL (example)
# DATABASE_URL=mysql://username:password@localhost:3306/grading_app

# API Keys for LLM Providers
# Get your OpenRouter API key from: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-your-key-here

# Get your Claude API key from: https://console.anthropic.com
CLAUDE_API_KEY=sk-ant-your-key-here

# Get your Google Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key-here

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# LM Studio local server URL (default)
LM_STUDIO_URL=http://localhost:1234/v1

# Ollama local server URL (default)
OLLAMA_URL=http://localhost:11434/api/generate

# Redis Configuration (for Celery broker and result backend)
# Default Redis connection (used by Celery)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
# Maximum file size in bytes (default: 16MB)
MAX_CONTENT_LENGTH=16777216

# Upload folder path (relative to app root)
UPLOAD_FOLDER=uploads

# Development/Production Settings
# Set to 'production' for production deployment
ENVIRONMENT=development

# Optional: Custom Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Optional: Celery Configuration overrides
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=grading_app.log

# Optional: Security Settings
# Set to True in production to use HTTPS
# USE_HTTPS=false

# Optional: Session Configuration
# SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# Optional: Rate Limiting
# RATELIMIT_STORAGE_URL=redis://localhost:6379/0
# RATELIMIT_DEFAULT=100 per minute

# Optional: Monitoring and Health Checks
# HEALTH_CHECK_ENABLED=true
# MONITORING_ENABLED=false

# Optional: Backup Configuration
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *  # Cron format: daily at 2 AM
# BACKUP_RETENTION_DAYS=7
